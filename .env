# Environment Variables for basic-cyberpunk-neon

# Vite Environment Variables (prefixed with VITE_)
VITE_APP_NAME="Cyberpunk Neon"
VITE_APP_VERSION="1.0.0"

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Theme Configuration
VITE_DEFAULT_THEME="dark"
VITE_ENABLE_THEME_SWITCHER=true

# Animation Settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

# Neon Effects Configuration
VITE_NEON_INTENSITY="high"
VITE_GRID_ANIMATION_SPEED=2000
VITE_PARTICLE_COUNT=50

# Performance Settings
VITE_LAZY_LOADING=true
VITE_PRELOAD_IMAGES=false

# Build Configuration
VITE_BUILD_TARGET="esnext"
VITE_MINIFY=true

# API Configuration (if needed for future features)
VITE_API_BASE_URL="http://localhost:3001"
VITE_API_TIMEOUT=5000

# Feature Flags
VITE_FEATURE_SOUND_EFFECTS=false
VITE_FEATURE_BACKGROUND_MUSIC=false
VITE_FEATURE_FULLSCREEN_MODE=true